---
import galleryData from '../data/gallery.json';
const base = import.meta.env.BASE_URL;

// Full URLs for Open Graph
const siteUrl = 'https://purikv.github.io';
const pageUrl = `${siteUrl}${base}/`;
const description = "Колекція астрофотографій глибокого космосу - галактики, туманності та зоряні скупчення";
// Use first image from gallery as preview (800px for faster loading)
// URL-encode the image path to handle Cyrillic characters
const firstImage = galleryData[0]?.preview
  ? `${siteUrl}${base}/${galleryData[0].preview.split('/').map(encodeURIComponent).join('/')}`
  : `${siteUrl}${base}/thumbnails/default_800.jpg`;
---
<html lang="uk">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Astro Gallery - Астрофотографія</title>
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:title" content="Astro Gallery - Астрофотографія" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={firstImage} />
    <meta property="og:image:width" content="800" />
    <meta property="og:image:height" content="533" />
    <meta property="og:locale" content="uk_UA" />
    <meta property="og:site_name" content="Astro Gallery - Володимир Пурик" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={pageUrl} />
    <meta name="twitter:title" content="Astro Gallery - Астрофотографія" />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={firstImage} />

    <!-- Additional meta -->
    <meta name="author" content="Володимир Пурик" />
    <link rel="canonical" href={pageUrl} />
    <style>
      * {
        box-sizing: border-box;
      }
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
        margin: 0;
        padding: 1rem;
        background: #000;
        color: #e0e0e0;
        line-height: 1.5;
      }

      /* Header */
      .header {
        max-width: 1400px;
        margin: 0 auto 2rem;
        padding: 0 1rem;
      }

      h1 {
        color: #fff;
        text-align: center;
        margin: 0 0 0.5rem 0;
        font-size: 1.75rem;
        font-weight: 500;
        letter-spacing: 0.05em;
      }

      .subtitle {
        text-align: center;
        color: #666;
        font-size: 0.9rem;
        margin: 0;
      }

      @media (min-width: 768px) {
        .header {
          margin-bottom: 3rem;
        }

        h1 {
          font-size: 2.5rem;
        }

        .subtitle {
          font-size: 1rem;
        }
      }

      /* Gallery Grid */
      .gallery {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        max-width: 1400px;
        margin: 0 auto;
      }

      @media (min-width: 640px) {
        body { padding: 1.5rem; }
        .gallery {
          grid-template-columns: repeat(2, 1fr);
          gap: 2rem;
        }
      }

      @media (min-width: 1024px) {
        body { padding: 2rem; }
        .gallery {
          grid-template-columns: repeat(3, 1fr);
          gap: 2rem;
        }
      }

      /* Card Styles - Clean & Minimal */
      .gallery-card {
        background: #0a0a0a;
        border: 1px solid #1a1a1a;
        overflow: hidden;
        transition: all 0.3s ease;
        text-decoration: none;
        color: inherit;
        display: block;
      }

      .gallery-card:hover {
        border-color: #333;
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.6);
      }

      .card-image-wrapper {
        position: relative;
        overflow: hidden;
        aspect-ratio: 4/3;
        background: #111;
      }

      .card-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.3s ease;
      }

      .gallery-card:hover .card-image {
        transform: scale(1.05);
      }

      .card-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
        padding: 2rem 1rem 1rem;
        opacity: 0;
        transition: opacity 0.3s;
      }

      .gallery-card:hover .card-overlay {
        opacity: 1;
      }

      .overlay-text {
        color: #fff;
        font-size: 0.85rem;
        margin: 0;
        line-height: 1.4;
      }

      .card-content {
        padding: 1.25rem;
      }

      @media (min-width: 768px) {
        .card-content {
          padding: 1.5rem;
        }
      }

      .card-title {
        font-size: 1.25rem;
        font-weight: 500;
        margin: 0 0 0.75rem 0;
        color: #fff;
      }

      @media (min-width: 768px) {
        .card-title {
          font-size: 1.4rem;
        }
      }

      .card-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
      }

      .meta-tag {
        background: #111;
        padding: 0.3rem 0.75rem;
        font-size: 0.75rem;
        color: #888;
        border: 1px solid #1a1a1a;
        white-space: nowrap;
      }

      .meta-tag.primary {
        color: #fff;
        border-color: #333;
      }

      .card-description {
        font-size: 0.9rem;
        color: #999;
        line-height: 1.6;
        margin: 0;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      .view-more {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 1rem;
        padding: 0.5rem 0;
        color: #666;
        font-size: 0.85rem;
        transition: color 0.2s;
      }

      .gallery-card:hover .view-more {
        color: #fff;
      }

      .view-more::after {
        content: '→';
        transition: transform 0.2s;
      }

      .gallery-card:hover .view-more::after {
        transform: translateX(4px);
      }
    </style>
  </head>
  <body>
    <div class="header">
      <h1>Астрофотографія</h1>
      <p class="subtitle">Глибокий космос очима любителя</p>
    </div>

    <div class="gallery">
      {galleryData.map((item) => (
        <a href={`${base}/object/${item.object.id}`} class="gallery-card">
          {item.preview && (
            <div class="card-image-wrapper">
              <img
                src={`${base}/${item.preview}`}
                alt={item.object?.name || item.title}
                loading="lazy"
                class="card-image"
              />
              <div class="card-overlay">
                <p class="overlay-text">
                  {item.object?.description && item.object.description.substring(0, 120)}...
                </p>
              </div>
            </div>
          )}

          <div class="card-content">
            <h2 class="card-title">{item.object?.name || item.title}</h2>

            <div class="card-meta">
              {item.object?.type && <span class="meta-tag primary">{item.object.type}</span>}
              {item.object?.constellation && <span class="meta-tag">{item.object.constellation}</span>}
              {item.object?.distance_ly && (
                <span class="meta-tag">{item.object.distance_ly.toLocaleString('uk-UA')} св.р.</span>
              )}
            </div>

            <p class="card-description">
              {item.object?.description}
            </p>

            <div class="view-more">Детальніше</div>
          </div>
        </a>
      ))}
    </div>
  </body>
</html>
